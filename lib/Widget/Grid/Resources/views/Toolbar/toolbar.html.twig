        {#elements#}
        <div class="pull-left">
            {% for item in element.elements %}
                {{item.render|raw}}
            {% endfor %}
        </div>

        <div class="pull-right">
            {#actions#}
            {% if element.actions %}
                <div class="pull-left">
                    Actions:&nbsp;
